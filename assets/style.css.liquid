body { 
   background-color: {{ settings.bg }};
   color: {{ settings.text_color }};
}

input[type="email"],
input[type="text"],
input[type="password"],
input[type="search"],
select,
button,
textarea {
   -webkit-appearance: none;
   -moz-appearance: none;
   appearance: none;
   border: none;
   background: transparent;
   outline: none;
   font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
   font-size: 16px;
}

input[type="email"],
input[type="text"],
input[type="password"],
input[type="search"] {
   display: block;
   width: 100%;
}

a,
button,
label,
input[type="submit"],
input[type="checkbox"],
input[type="radio"] {
   cursor: pointer;
}

img,
svg{
   display: block;
   max-width: 100%;
}

/* Helpers */
.width{
   max-width: 1340px;
   margin: 0 auto;
   width: 92%;
}

.hide{
   display: none;
}

/* Product */

.product {
   padding: 40px 0;
}

.product .width{
   display: flex;
   align-items: center;
   gap: 40px;
}

.product-left {
   flex: 1;
   max-width: 480px;
   
}

.product-right{
   flex: 1;
   max-width: 480px;
   margin-left: 80px;
}

.product-description{
   text-wrap: wrap;
}

.product-option {
   display: block;
 
}

.product-option .product-select{
   width: 100%;
   padding: 10px;
   border: 1px solid #eee;
   margin-bottom: 10px;
}

.product-option select::after{
   content: "â–¼";
   position: absolute;
   right: 10px;
}

.product-option input{
   width: 100%;
   padding: 10px;
   border: 1px solid #eee;
   margin-top: 10px;
   margin-bottom: 10px;
}

.product-add{
   width: 100%;
   padding: 10px;
   background-color: #000;
   color: #fff;
   border-radius: 5px;
}

.product-prices{
   display: flex;
   align-items: center;
   gap: 10px;
}
.product-compare{
   font-size: 14px;
   text-decoration: line-through;
   color: #999;
}
/* Header */

.header {
   padding: 24px 0;
   border-bottom: 1px solid #eee;
}

.header .width{
   display: flex;
   align-items: center;
   justify-content: space-between;
}

.header-nav{
   display: inline-flex;
   align-items: center;
   gap: 44px
}

.header-nav a{
   font-weight: 500;
   color: #111;
}